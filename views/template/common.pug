doctype
html
	head
		meta(charset="utf-8")
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title Document
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
		block css
	body
		.navigation-bar
			nav.navbar.navbar-expand-lg.navbar-dark.bg-success
				a.navbar-brand(href="#") Demo Project
				button.navbar-toggler(type="button", data-toggle="collapse", data-target="#top-navbar")
					span.navbar-toggler-icon
				.collapse.navbar-collapse#top-navbar
					ul.navbar-nav
						li.nav-item.active
							a.nav-link(href="/") Home
								span.sr-only (current)
						li.nav-item
							a.nav-link(href="/users") Users
						li.nav-item
							a.nav-link(href="/products") Products
		if user
			h2.bg-danger.text-light Hello, #{user.name}
		block content
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js")
		block script