extends ../template/common
block content
	.container
		.row
			.col-12
				h3 Create new user

				if errors
					each error in errors
						.alert.alert-danger= error

				form(action="/users/create", method="post", enctype="multipart/form-data")
					.form-group
						label(for="name") Name
						input#name.form-control(type="text", name="name", value= value ? value.name : "")
					.form-group
						label(for="phone") Phone
						input#phone.form-control(type="number", name="phone", value= value ? value.phone: "")
					.form-group
						label(for="email") Email
						input#email.form-control(type="text", name="email", value= value ? value.email: "")
					.form-group
						label(for="password") Password
						input#phone.form-control(type="password", name="password", value= value ? value.password: "")
					.form-group
						label(for="file") Avatar
						input#file.form-control-file(type="file")
					button.btn.btn-success(type="submit") Create
