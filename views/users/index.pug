extends ../template/common.pug
block content
	.container
		.row
			.col-12
				h3.mt-3 User list
				p.my-3
					if user.regency === 'admin'
						a.btn.btn-success(href="/users/create") Create new user
				form(action="/users/search", method="get")
					input(type="text", name="q")
					button(type="submit") Search
				table.table.my-3
					tr
						th Avatar
						th Name
						th Phone
						th Actions
					each user in users
						tr
							td
								img(src=user.avatar, width="60px", height="60px") 
							td= user.name
							td= user.phone
							td
								a.btn.btn-light(href="/users/" + user.id) View