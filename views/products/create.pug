extends ../template/common
block content
    .container
        .row
            .col-12
                h3 Create new product

                if errors
                    each error in errors
                        .alert.alert-danger= error
                
                form(action="/products/create", method="post", enctype="multipart/form-data")
                    .form-group
                        label(for="name") Name
                        input#name.form-control(type="text", name="name", value= value ? value.name : "", autofocus)
                    .form-group
                        label(for="description") Description
                        input#description.form-control(type="text", name="description", value= value ? value.description : "")
                    .form-group
                        label(for="price") Price
                        input#price.form-control(type="text", name="price", value= value ? value.name : "")
                    .form-group
                        label(for="product-img") Image
                        input#product-img.form-control-file(type="file", name="product_image")
                    button.btn.btn-success(type="submit") Create
