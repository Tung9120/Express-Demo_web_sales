extends ../template/common.pug
block content
    .container
        .row
            .col-12
                h3.mt-3 Products
                p.my-3
                    a.btn.btn-success(href="/products/create") Create new product
                form(action="/products/search", method="get")
                    input(type="text", name="q")
                    button(type="submit") Search
        .row
            each product in products
                .col-lg-3.col-12.my-5
                    .card
                        img.card-img-top(src="https://via.placeholder.com/297x180")
                        .card-body
                            h5.card-title= product.name
                            p.card-text= product.description
                            h5.card-text
                                span= product.price
                                span &nbsp; VND
                            a.btn.btn-success.mr-4(href="#") Add to card
                            a.btn.btn-secondary(href="/products/" + product.id) View

